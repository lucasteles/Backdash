{
    "metadata": [
        {
            "src": [
                {
                    "src": "../src",
                    "files": [
                        "Backdash/bin/Release/**/*.dll"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "docs/images/**"
                ]
            },
            {
                "src": "../",
                "files": [
                    "assets/images/*.png",
                    "logo.png"
                ],
                "dest": "./",
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "template": [
            "default",
            "modern",
            "template"
        ],
        "output": "_site",
        "sitemap": {
            "baseUrl": "https://lucasteles.github.io/Backdash"
        },
        "postProcessors": [
            "ExtractSearchIndex"
        ],
        "globalMetadata": {
            "noLangKeyword": false,
            "_appName": "Backdash",
            "_appTitle": "Backdash Netcode",
            "_enableSearch": true,
            "_enableNewTab": true,
            "_appLogoPath": "docs/images/logo.png",
            "_appFaviconPath": "docs/images/favicon.ico",
            "_appFooter": "<span>Developed by <a href=\"https://lucasteles.dev/\">Lucas Teles</a>.</span>",
            "pdf": false,
            "_disableContribution": false,
            "_gitUrlPattern": "github",
            "_gitContribute": {
                "repo": "https://github.com/lucasteles/Backdash",
                "branch": "master",
                "apiSpecFolder": "api"
            }
        }
    }
}
